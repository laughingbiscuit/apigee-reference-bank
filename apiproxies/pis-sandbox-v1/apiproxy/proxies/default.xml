<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <DefaultFaultRule>
      <Step>
        <Name>Shared.CORSError</Name>
      </Step>
      <AlwaysEnforce>true</AlwaysEnforce>
    </DefaultFaultRule>
    <Flows/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
              <Name>Shared.RaiseCORS</Name>
              <Condition>request.verb = "OPTIONS"</Condition>
            </Step>
            <Step>
                <Name>Shared.VerifyAccessToken</Name>
                <Condition>!(environment.name = "test" AND request.header.Authorization = "Bearer sampleToken")</Condition>
            </Step>
        </Request>                                                              
    </PreFlow>
    <PostFlow>
      <Response>
        <Step>
          <Name>Shared.CORSHeaders</Name>
        </Step>
      </Response>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/pis-sandbox</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="sandbox">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
